
@inherits FormEditorBase<string>

<FormLabel Label="@_label" Title="@_title" Note="@_note" For="@_id" IsRequired="_isRequired">
    <textarea id="@_id"
              class="form-control @ValidationClass"
              placeholder="@_placeholder"
              rows="@Rows"
              value="@_value"
              @oninput="_onInputDelegate!"
              @onchange="_onChangeDelegate!"
              @ref="_editorElement">
    </textarea>
    @if (_validationError is not null) {
        <span class="fw-bold text-danger">@_validationError</span>
    }
</FormLabel>